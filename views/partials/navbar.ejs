<nav class="bg-rose-500 dark:bg-purple-700 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
        <!-- Logo -->
        <a href="/" class="text-2xl font-bold">ERMFox Portfolio</a>
        <!-- Mobile Menu Button -->
        <button id="menu-button" class="block md:hidden">
            <img src="/media/menu.svg" alt="Menu" class="w-6 h-6">
        </button>

        <!-- Navigation Links -->
        <ul id="nav-links" class="hidden md:flex space-x-6 items-center">
            <li><a href="/" class="hover:underline">Home</a></li>
            <li><a href="/about" class="hover:underline">About</a></li>
            <li><a href="/portfolio" class="hover:underline">Portfolio</a></li>
            <li><a href="/contact" class="hover:underline">Contact</a></li>
            <li><a href="/community" class="hover:underline">Community</a></li>
        </ul>

        <!-- Dark Mode Toggle Button for Larger Screens -->
        <button onclick="toggleDarkMode()" class="hidden md:block ml-4 p-2 rounded bg-rose-500 dark:bg-purple-700 text-white hover:bg-rose-700 dark:hover:bg-purple-900">
            <img id="dark-mode-icon" src="/media/moon.png" alt="Toggle dark mode" class="w-6 h-6" />
        </button>        
    </div>

    <!-- Mobile Menu -->
    <ul id="mobile-nav" class="hidden flex flex-col space-y-4 mt-4 md:hidden">
        <li><a href="/" class="hover:underline">Home</a></li>
        <li><a href="/about" class="hover:underline">About</a></li>
        <li><a href="/portfolio" class="hover:underline">Portfolio</a></li>
        <li><a href="/contact" class="hover:underline">Contact</a></li>
        <li><a href="/community" class="hover:underline">Community</a></li>
        <!-- Dark Mode Text Button for Mobile Menu -->
        <li>
            <button onclick="toggleDarkMode()" class="p-2 text-left font-semibold hover:underline">
                Toggle Dark Mode
            </button>
        </li>
    </ul>
</nav>

<!-- Scripts -->
<script>
    const menuButton = document.getElementById('menu-button');
    const mobileNav = document.getElementById('mobile-nav');

    menuButton.addEventListener('click', () => {
        mobileNav.classList.toggle('hidden');
    });

    function toggleDarkMode() {
        document.documentElement.classList.toggle('dark');

        // Toggle icon based on the current theme
        const icon = document.getElementById('dark-mode-icon');
        if (document.documentElement.classList.contains('dark')) {
            icon.src = '/media/brightness.png'; // Brightness icon for dark mode
            localStorage.setItem('theme', 'dark'); // Save preference
        } else {
            icon.src = '/media/moon.png'; // Moon icon for light mode
            localStorage.setItem('theme', 'light'); // Save preference
        }
    }

    // Set theme on page load based on user preference
    if (localStorage.getItem('theme') === 'dark') {
        document.documentElement.classList.add('dark');
        const icon = document.getElementById('dark-mode-icon');
        if (icon) icon.src = '/media/brightness.png';
    }
</script>
